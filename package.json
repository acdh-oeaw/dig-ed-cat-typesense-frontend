{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "serve": "npm run dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare"
  },
  "devDependencies": {
    "@acdh-oeaw/eslint-config": "^1.0.0",
    "@acdh-oeaw/eslint-config-nuxt": "^1.0.0",
    "@acdh-oeaw/eslint-config-vue": "^1.0.0",
    "@acdh-oeaw/prettier-config": "^1.0.0",
    "@acdh-oeaw/stylelint-config": "^1.0.1",
    "@acdh-oeaw/tsconfig": "^1.0.0",
    "@headlessui/tailwindcss": "^0.1.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/leaflet": "^1.9.3",
    "@types/node": "^18",
    "@vue/compiler-sfc": "^3.3.4",
    "eslint": "^8.41.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "nuxt": "^3.5.1",
    "postcss-nesting": "^11.2.2",
    "prettier": "^3.0.3",
    "stylelint": "^15.6.2",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "^1.0.5",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.22.3",
    "@headlessui/vue": "^1.7.13",
    "@heroicons/vue": "^2.0.18",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "typesense": "^1.5.4"
  },
  "eslintConfig": {
    "extends": [
      "@acdh-oeaw/eslint-config",
      "@acdh-oeaw/eslint-config/strict",
      "@acdh-oeaw/eslint-config-vue",
      "@acdh-oeaw/eslint-config-nuxt",
      "plugin:eslint-plugin-tailwindcss/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "@typescript-eslint/no-unsafe-return": "off"
    }
  },
  "postcss": {
    "plugins": {
      "tailwindcss/nesting": "postcss-nesting",
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": "@acdh-oeaw/prettier-config",
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "stylelint": {
    "extends": "@acdh-oeaw/stylelint-config"
  }
}
